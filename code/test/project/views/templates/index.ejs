<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />

    <title><%= guest.name %> | Ziventi</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>

  <body style="background-color: black; color: white">
    <table>
      <thead>
        <th>Name</th>
        <th>Status</th>
      </thead>
      <tbody>
        <% allGuests.forEach((eachGuest, key) => { %>
        <tr>
          <td><%= eachGuest.name %></td>
          <% if (eachGuest._hashes) {
          Object.entries(eachGuest._hashes).forEach(([status, hash]) => { %>
          <td>
            <a
              id="<%= status.toLowerCase() %>"
              href="<%= `http://localhost:3000/api/${hash}` %>"
            >
              <%= status %>
            </a>
          </td>
          <% }); } %>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
