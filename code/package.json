{
  "name": "ziventi",
  "private": true,
  "version": "1.0.0",
  "packageManager": "yarn@3.2.1",
  "workspaces": [
    "projectsv2",
    "server",
    "site",
    "utils"
  ],
  "bin": {
    "ziventi": "./scripts/cli.js",
    "ziventi-build": "./scripts/build.js"
  },
  "prettier": "@zzavidd/prettier-config",
  "scripts": {
    "build": "node scripts/build.js",
    "check": "tsc --noEmit",
    "cli": "node scripts/cli.js",
    "clean": "node scripts/clean.js",
    "dev:file": "node scripts/dev.js",
    "dev:server": "nodemon --watch server/*.ts server/index.ts",
    "test": "jest --silent --runInBand",
    "watch": "node scripts/watch.js",
    "inspect": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "eslint --ext .js,.ts,.tsx .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier": "prettier --ignore-path ../.gitignore --check \"**/*.{js,ts,tsx,scss,json}\"",
    "prettier:fix": "yarn run prettier --write",
    "stylelint": "stylelint **/*.{scss,ts,tsx}"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-decorators": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/adm-zip": "^0.4.34",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "^27.0.3",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^17.0.33",
    "@types/puppeteer": "^5.4.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@ziventi/utils": "workspace:utils",
    "@zzavidd/eslint-config": "^1.4.0",
    "@zzavidd/prettier-config": "^1.4.0",
    "@zzavidd/stylelint-config": "^1.4.0",
    "adm-zip": "^0.5.9",
    "axios": "^0.24.0",
    "babel-jest": "^28.1.0",
    "chokidar": "^3.5.2",
    "dotenv": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-import": "^2.23.4",
    "google-spreadsheet": "^3.2.0",
    "jest": "^27.4.5",
    "jest-puppeteer": "^6.0.3",
    "log4js": "^6.3.0",
    "node-cache": "^5.1.2",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "puppeteer": "^13.0.1",
    "stylelint": "^14.2.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.5"
  }
}
